<!DOCTYPE html>
<html>
<head>
  <title>Cpc</title>
 <%= stylesheet_link_tag    "frontend"  %>
 
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="wrapper">
		<!--  Header start-->
		<div id="header">
			
			<%= link_to image_tag("/assets/front-end-images/logo.png", alt: "CPC Advertising"), 'http://rubyonrails.org/' %>

			<div class="headerright">
				<!--  Top serch sec start-->
				<div class="tpsrc">
					<div id="user_nav">						
							<% if current_user %>
						    Signed in as <strong><%= current_user.username %></strong>!
						    <%= link_to "Sign out", signout_path, id: "sign_out" %>
						<% else %>
							
							<% if current_admin_user %>
							
							<% else %>
							
						
							<div class="tpfrmsec">
																													 
								
								  <% if  flash[:signin_notice] %>
									<div class="error_messages" style="clear: left;">     
								      <ul>
								       <%=  flash[:signin_notice] %>
								      </ul>
								    </div>
								<% end %>	
															
								<div style="float: left;">
								
								<%= form_tag("/login", :method => "post") do  %>								
							    <%= text_field_tag :email, params[:email],:class => 'headtopinput' %>  								  							
							    <%= password_field_tag :password,'' ,:class => 'headtopinput' %>							
							    <%= submit_tag "Log in",  :class => 'tplogin' %>								
								<% end %>
								</div>
								
							</div>

							<% end %>						
						
						
							
						<% end %>
						
					</div>
				
				
					
				</div>
				
				<!--  Top menu start-->
				<div class="tpmenu">
					<a href="#" title="Home" class="active">Home</a>
						<a href="#" title="PROMOTE OFFERS">PROMOTE OFFERS</a>
						<%= link_to('LIST AN OFFER', 'offers/new', :title => 'LIST AN OFFER') %>
						<a href="#" title="YOUR OFFERS">YOUR OFFERS</a>
				</div>
			</div>
		</div>
		<!--  Header End-->