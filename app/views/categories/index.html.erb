<%= render 'admin_user/admin_header' %>

<%= render 'admin_user/admin_lhs' %>

<div class="rhscontent">



<h1>List of Categories</h1>

<table>
  <tr>
    <th>Category name</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cat_results.each do |category| %>
  <tr>
    <td><%= category.category_name %></td>
    <td>
    	
    	<% if category.status %>
    	 Active
    	<% else %>
    	 Inactive
    	<% end %>
    	
   </td>
    <td><%= link_to 'Edit', edit_category_path(category) %></td>
    <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
<tr>
		<td colspan="4"></td>
	</tr>
	<tr>
		<td colspan="4" align="right"><%= paginate @cat_results %></td>
	</tr>
</table>

<br />

<%= link_to 'New Category', new_category_path %>

 

</div>



</div>
<%= render 'admin_user/admin_footer' %>


