<!DOCTYPE html>
<html>
<head>
  <title>Cpc</title>
 <%= stylesheet_link_tag    "frontend", :media => "all" %>
 
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="wrapper">
		<!--  Header start-->
		<div id="header">
			
			<%= link_to image_tag("/assets/front-end-images/logo.png", alt: "CPC Advertising"), 'http://rubyonrails.org/' %>

			<div class="headerright">
				<!--  Top serch sec start-->
				<div class="tpsrc">
					<div id="user_nav">
						<%= notice %>
						
							<% if current_user %>
						    Signed in as <strong><%= current_user.username %></strong>!
						    <%= link_to "Sign out", signout_path, id: "sign_out" %>
						<% else %>
							
							<% if current_admin_user %>
							
							<% else %>
							
							<div class="srctxt">Already Member? <span>Login here:</span></div>
							<div class="tpfrmsec">
								<input name="" type="text" class="headtopinput" /> 
								<input name="" type="text" class="headtopinput" /> 
								<input name="" type="button" class="tplogin" value="Login" />
							</div>

							<% end %>						
						
						
							
						<% end %>
						
					</div>
				
				
					
				</div>
				
				<!--  Top menu start-->
				<div class="tpmenu">
					<a href="#" title="Home" class="active">Home</a>
						<a href="#" title="PROMOTE OFFERS">PROMOTE OFFERS</a>
						<%= link_to('LIST AN OFFER', 'offers/new', :title => 'LIST AN OFFER') %>
						<a href="#" title="YOUR OFFERS">YOUR OFFERS</a>
				</div>
			</div>
		</div>
		<!--  Header End-->
		
		
		<%= yield %>
		
		
		<!--  Footer Start-->
		<div id="footer">
			All Rights Reserved Copyright Â© 2012
			<div class="sntoolboxbt">
				<a title="Follow Us on Facebook" href="#" target="_blank">
					<span class="facebook"></span>
				</a>
				<a title="Twitter" href="#" target="_blank">
					<span class="twitter"></span>
				</a>

			</div>
		</div>
	</div>

</body>
</html>
