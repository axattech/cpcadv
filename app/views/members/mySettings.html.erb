<%= render 'home/header' %>
	<div class="mainfrmcontainer">
		<%= render 'home/lhs' %>
		<% @offers.each do |offer| %>
			<div class="rhs">
			    <%= image_tag(offer.image.url(:small), alt: offer.offer_name, class: 'imgr') %>       
			    <h6><%= offer.offer_name %></h6>
			    <p><%= offer.offer_description %></p>
			
			    <p>
			    	<strong>CPC</strong> : 
			    	<%= offer.offer_cr_per_click %> 
			    	<strong> Max Credit</strong> : 
			    	<%= offer.offer_budget %>
			    	<strong>Country</strong> : 
			    	<%= offer.offer_worldwide %>
			    </p>
			    <p>
			    	<strong>Category</strong> : 
			    	Entertainment  
			    	<strong>Duration</strong> : 
			    	24th July 2012 to 30th July 2012&#13;
			    </p>
			</div>
		<% end %>
		<%= paginate @offers %>
	</div>
<%= render 'home/footer' %>