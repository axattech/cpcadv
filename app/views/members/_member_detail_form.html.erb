<% if  flash[:user_update_valuse_notice] %>
	<div class="error_messages" style="clear: left;">     
       <%= flash[:member_detail_update_notice] %>
    </div>
<% end %>
<%= form_tag("members/updateMemberDetail", :method => "post") do  %>
  <p>
  	<%= label_tag :gender %><br />
  	<%= radio_button_tag :gender, 'm', :checked => true %>Male   
   	<%= radio_button_tag :gender, 'f' %>Female             
  </p>
  <p>
  	<%= label_tag :age %><br />
  	<%= text_field_tag :age %>
  </p>
  <p>
  	<%= label_tag :country, "country" %><br />
    <%= select_tag "country_id",   options_from_collection_for_select(Country.all.collect, "id", "country") , {:prompt => 'Select Country'} %>
	<%= submit_tag "Update",  :class => 'tplogin' %>
  </p>
<% end %>